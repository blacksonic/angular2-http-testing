{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "rootDir": ".",
    "outDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "jasmine",
      "node"
    ],
    "typeRoots": [ "./node_modules/@types" ]
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  },
  "exclude": [
    "node_modules",
    "./src/*.spec.ts",
    "./src/main.test.ts"
  ]
}
